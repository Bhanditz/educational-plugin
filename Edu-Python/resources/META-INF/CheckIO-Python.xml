<idea-plugin>

  <extensions defaultExtensionNs="com.intellij">
    <httpRequestHandler implementation="com.jetbrains.edu.python.learning.checkio.connectors.PyCheckiOOAuthRestService"/>
    <applicationService serviceImplementation="com.jetbrains.edu.python.learning.checkio.PyCheckiOSettings"/>
  </extensions>

  <extensions defaultExtensionNs="Educational">
    <configurator implementationClass="com.jetbrains.edu.python.learning.checkio.PyCheckiOConfigurator" language="Python" courseType="CheckiO"/>
    <configurator implementationClass="com.jetbrains.edu.python.learning.checkio.pycharm.PyCheckiOConfigurator" language="Python" courseType="CheckiO"/>
    <coursesProvider implementation="com.jetbrains.edu.python.learning.checkio.PyCheckiOCourseProvider"/>
    <optionsProvider instance="com.jetbrains.edu.python.learning.checkio.settings.PyCheckiOOptions"/>
  </extensions>

  <extensions defaultExtensionNs="educational">
    <languageDecorator implementationClass="com.jetbrains.edu.python.learning.checkio.PyCheckiOLanguageDecorator" language="CheckiO-Python" />
  </extensions>

  <application-components>
    <component>
      <implementation-class>com.jetbrains.edu.python.learning.checkio.PyCheckiOApplicationComponent</implementation-class>
    </component>
  </application-components>

</idea-plugin>