<idea-plugin version="2">
  <id>com.jetbrains.edu.coursecreator.intellij</id>
  <name>Course Creator for IntelliJ IDEA</name>
  <version>1.0.4</version>
  <vendor>JetBrains</vendor>

  <description><![CDATA[
      Plugin for courses creation
    ]]></description>

  <change-notes><![CDATA[
    ]]>
  </change-notes>

  <idea-version since-build="162.75"/>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.jetbrains.edu.intellij</depends>
  <depends>com.jetbrains.edu.coursecreator</depends>
  <depends>com.jetbrains.edu.interactivelearning</depends>
  <depends>JUnit</depends>

  <extensions defaultExtensionNs="com.jetbrains.edu.intellij">
    <eduIntelliJProjectTemplate implementation="com.jetbrains.edu.course.creator.EduCustomCourseProjectTemplate" order="last"/>
    <eduIntelliJProjectTemplate implementation="com.jetbrains.edu.course.creator.EduCCProjectTemplate" order="last"/>
  </extensions>
  <extensions defaultExtensionNs="Edu">
    <CCLanguageManager implementationClass="com.jetbrains.edu.course.creator.EduJavaCCLanguageManager" language="JAVA"/>
    <CCLanguageManager implementationClass="com.jetbrains.edu.course.creator.EduKotlinCCLanguageManager" language="kotlin"/>
    <StudyLanguageManager language="JAVA" implementationClass="com.jetbrains.edu.course.creator.EduJavaStudyLanguageManager"/>
  </extensions>

    <actions>
        <action id="CreateTask" class="com.jetbrains.edu.course.creator.EduCCNewTaskAction" overrides="true"/>
        <action id="CreateLesson" class="com.jetbrains.edu.course.creator.EduCCNewLessonAction" overrides="true"/>
    </actions>
</idea-plugin>