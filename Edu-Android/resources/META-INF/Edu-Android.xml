<idea-plugin>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.plugins.gradle</depends>
    <depends>JUnit</depends>

    <application-components>
        <component>
            <implementation-class>com.jetbrains.edu.android.AndroidApplicationComponent
            </implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="Educational">
        <configurator implementationClass="com.jetbrains.edu.android.AndroidConfigurator" language="kotlin" courseType="Android"/>
    </extensions>

    <extensions defaultExtensionNs="educational">
        <languageDecorator language="edu-android"
                           implementationClass="com.jetbrains.edu.android.AndroidLanguageDecorator"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <experimentalFeature id="com.jetbrains.edu.android" percentOfUsers="100" internalFeature="true">
            <description>Enables support of Android courses</description>
        </experimentalFeature>
    </extensions>

</idea-plugin>
