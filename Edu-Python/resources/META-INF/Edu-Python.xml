<idea-plugin>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.python</depends>

  <extensions defaultExtensionNs="com.intellij">
    <localInspection shortName="PyStudyInterpreterInspection" bundle="com.jetbrains.python.PyBundle" key="INSP.NAME.invalid.interpreter" groupKey="INSP.GROUP.python" enabledByDefault="true"  level="WARNING" implementationClass="com.jetbrains.edu.python.learning.PyInterpreterInspection"/>

    <localInspection shortName="PyStudyLanguageLevelInspection" suppressId="PyStudyLanguageLevelInspection" enabledByDefault="true"
                     level="WARNING" implementationClass="com.jetbrains.edu.python.learning.PyLanguageLevelInspection"
                     displayName="Unsupported language level for a course" groupName="Inspection.Study.Python"/>
    <configurationType implementation="com.jetbrains.edu.python.coursecreator.run.PyCCRunTestsConfigurationType"/>
    <runConfigurationProducer implementation="com.jetbrains.edu.python.coursecreator.run.PyCCRunTestsConfigurationProducer"/>
  </extensions>

  <extensions defaultExtensionNs="Pythonid">
    <inspectionExtension implementation="com.jetbrains.edu.python.learning.highlighting.PyInspectionExtension"/>
    <importResolver implementation="com.jetbrains.edu.python.learning.PyImportResolver"/>
  </extensions>


  <extensions defaultExtensionNs="Educational">
    <pluginConfigurator implementationClass="com.jetbrains.edu.python.learning.PyPluginConfigurator" language="Python"/>
    <pluginConfigurator implementationClass="com.jetbrains.edu.python.learning.pycharm.PyPluginConfigurator" language="Python"/>
  </extensions>

  <actions>
    <action id="Educational.WatchTutorial" class="com.jetbrains.edu.python.learning.actions.PyWatchTutorialAction">
      <add-to-group group-id="HelpMenu" anchor="before" relative-to-action="HelpTopics"/>
    </action>

    <action class="com.jetbrains.edu.python.coursecreator.PyCCChangeCourseInfo" id="Educational.Educator.ChangeCourseInfo" overrides="true"/>

  </actions>

  <project-components>
    <component>
      <implementation-class>com.jetbrains.edu.python.learning.PyShowTutorial</implementation-class>
      <interface-class>com.jetbrains.edu.python.learning.PyShowTutorial</interface-class>
    </component>
  </project-components>

  <application-components>
    <component>
      <implementation-class>com.jetbrains.edu.python.learning.PyInitialConfigurator</implementation-class>
      <headless-implementation-class/>
    </component>
  </application-components>

</idea-plugin>