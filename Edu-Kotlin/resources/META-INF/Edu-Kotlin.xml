<idea-plugin>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>JUnit</depends>


    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceInterface="com.jetbrains.edu.kotlin.twitter.KtTwitterSettings"
                        serviceImplementation="com.jetbrains.edu.kotlin.twitter.KtTwitterSettings"/>
    </extensions>

    <extensions defaultExtensionNs="Educational">
        <pluginConfigurator implementationClass="com.jetbrains.edu.kotlin.KtPluginConfigurator" language="kotlin"/>
        <pluginConfigurator implementationClass="com.jetbrains.edu.kotlin.studio.KtPluginConfigurator" language="kotlin"/>
        <studyTwitterPluginConfigurator implementation="com.jetbrains.edu.kotlin.twitter.KtTwitterConfigurator"/>
        <optionsProvider instance="com.jetbrains.edu.kotlin.twitter.KtOptionsProvider"/>
    </extensions>

</idea-plugin>