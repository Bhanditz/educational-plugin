<idea-plugin version="2">
  <id>com.jetbrains.edu.java</id>
  <name>Edu Java</name>
  <version>1.0.2</version>
  <vendor>JetBrains</vendor>

  <description><![CDATA[
      Educational plugin for Java programming language
    ]]></description>

  <change-notes>
  </change-notes>

  <idea-version since-build="162.75"/>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.jetbrains.edu.interactivelearning</depends>
  <depends>com.intellij.modules.lang</depends>
  <depends>JUnit</depends>
  <depends optional="true">com.jetbrains.edu.coursecreator</depends>

  <extensions defaultExtensionNs="Edu">
    <courseConfigurator language="JAVA" implementationClass="com.jetbrains.edu.java.EduJavaCourseConfigurator"/>
    <pluginConfigurator language="JAVA" implementationClass="com.jetbrains.edu.java.EduJavaPluginConfigurator"/>
  </extensions>

  <actions>
    <action id="EduJavaCheckAction" class="com.jetbrains.edu.java.EduJavaCheckAction" text="Edu Java Check"/>
  </actions>

</idea-plugin>