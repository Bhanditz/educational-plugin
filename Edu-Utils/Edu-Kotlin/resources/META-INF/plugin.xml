<idea-plugin version="2">
    <id>com.jetbrains.edu.kotlin</id>
    <name>Edu Kotlin</name>
    <version>1.0.5</version>
    <vendor>JetBrains</vendor>

    <description><![CDATA[
      Education plugin for Kotlin programming language
    ]]></description>

    <change-notes><![CDATA[

    ]]>
    </change-notes>

    <idea-version since-build="144.3891"/>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.jetbrains.edu.interactivelearning</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.jetbrains.edu.intellij</depends>
    <depends>com.jetbrains.edu.core</depends>

    <extensions defaultExtensionNs="com.intellij">
        <treeStructureProvider implementation="com.jetbrains.edu.kotlin.KotlinStudyTreeStructureProvider" order="last"/>
    </extensions>
    <extensions defaultExtensionNs="Edu">
        <StudyLanguageManager implementationClass="com.jetbrains.edu.kotlin.KotlinStudyLanguageManager" language="kotlin"/>
        <studyToolWindowConfigurator implementation="com.jetbrains.edu.kotlin.KotlinStudyToolWindowConfigurator"/>
    </extensions>
    <extensions defaultExtensionNs="com.jetbrains.edu.intellij">
        <eduIntelliJProjectTemplate implementation="com.jetbrains.edu.kotlin.EduKotlinProjectTemplate"/>
    </extensions>

</idea-plugin>