<idea-plugin>
    <depends>com.intellij.modules.lang</depends>
    <depends>JUnit</depends>

    <extensions defaultExtensionNs="Educational">
        <configurator language="JAVA" implementationClass="com.jetbrains.edu.java.JConfigurator"/>

        <taskChecker language="JAVA" implementationClass="com.jetbrains.edu.learning.checker.OutputTaskChecker"/>
        <taskChecker language="JAVA" implementationClass="com.jetbrains.edu.learning.checker.TaskWithSubtasksChecker"/>
        <taskChecker language="JAVA" implementationClass="com.jetbrains.edu.learning.checker.ChoiceTaskChecker"/>
        <taskChecker language="JAVA" implementationClass="com.jetbrains.edu.learning.checker.CodeTaskChecker"/>
        <taskChecker language="JAVA" implementationClass="com.jetbrains.edu.learning.checker.TheoryTaskChecker"/>
        <taskChecker language="JAVA" implementationClass="com.jetbrains.edu.java.JTaskChecker"/>
    </extensions>

    <extensions defaultExtensionNs="educational">
        <languageDecorator language="JAVA" implementationClass="com.jetbrains.edu.java.JLanguageDecorator" />
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <renameHandler implementation="com.jetbrains.edu.java.JMoveRenameHandler" order="first"/>
        <refactoring.moveHandler implementation="com.jetbrains.edu.java.JMoveRenameHandler" order="first"/>
    </extensions>
</idea-plugin>

