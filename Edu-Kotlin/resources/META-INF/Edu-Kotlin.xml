<idea-plugin>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>JUnit</depends>


    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceInterface="com.jetbrains.edu.kotlin.twitter.KtTwitterSettings"
                        serviceImplementation="com.jetbrains.edu.kotlin.twitter.KtTwitterSettings"/>
    </extensions>

    <extensions defaultExtensionNs="Educational">
        <configurator implementationClass="com.jetbrains.edu.kotlin.KtConfigurator" language="kotlin"/>
        <twitterPluginConfigurator implementation="com.jetbrains.edu.kotlin.twitter.KtTwitterConfigurator"/>
        <optionsProvider instance="com.jetbrains.edu.kotlin.twitter.KtOptionsProvider"/>

        <taskChecker language="kotlin" implementationClass="com.jetbrains.edu.learning.checker.TaskWithSubtasksChecker"/>
        <taskChecker language="kotlin" implementationClass="com.jetbrains.edu.learning.checker.ChoiceTaskChecker"/>
        <taskChecker language="kotlin" implementationClass="com.jetbrains.edu.learning.checker.CodeTaskChecker"/>
        <taskChecker language="kotlin" implementationClass="com.jetbrains.edu.kotlin.check.KtOutputTaskChecker"/>
        <taskChecker language="kotlin" implementationClass="com.jetbrains.edu.kotlin.check.KtTheoryTaskChecker"/>
        <taskChecker language="kotlin" implementationClass="com.jetbrains.edu.kotlin.check.KtTaskChecker"/>
    </extensions>

    <extensions defaultExtensionNs="educational">
        <languageDecorator implementationClass="com.jetbrains.edu.kotlin.KtLanguageDecorator" language="kotlin" />
    </extensions>

</idea-plugin>